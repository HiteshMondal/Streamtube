pipeline {
  agent any

  environment {
    IMAGE_NAME = "hiteshmondaldocker/streamtube-web"
    IMAGE_TAG = "${BUILD_NUMBER}"
  }

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/HiteshMondal/Streamtube.git'
      }
    }

    stage('Build Docker Image') {
      steps {
        script {
          withCredentials([file(credentialsId: 'streamtube-env', variable: 'ENV_FILE')]) {
            sh """
              cp \$ENV_FILE .env
              docker build -t ${IMAGE_NAME}:${IMAGE_TAG} .
            """
          }
        }
      }
    }


    stage('Push to Docker Hub') {
      steps {
        script {
          withCredentials([usernamePassword(credentialsId: 'dockerhub-creds-id', usernameVariable: 'DOCKER_USER', passwordVariable: 'DOCKER_PASS')]) {
            sh """
              docker login -u ${DOCKER_USER} -p ${DOCKER_PASS}
              docker push ${IMAGE_NAME}:${IMAGE_TAG}
            """
          }
        }
      }
    }

    stage('Deploy to Kubernetes') {
      steps {
        script {
          withCredentials([file(credentialsId: 'kubeconfig-id', variable: 'KUBECONFIG')]) {
              sh """
                kubectl --kubeconfig=\${KUBECONFIG} config current-context
                kubectl --kubeconfig=\${KUBECONFIG} get nodes
                kubectl --kubeconfig=\${KUBECONFIG} set image deployment/streamtube-deployment streamtube=${IMAGE_NAME}:${IMAGE_TAG} --namespace=default
              """
            }
        }
      }
    }
  }
}
